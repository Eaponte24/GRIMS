<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
	<div class="carousel-inner">

		<div class="carousel-item active" data-bs-interval="4000"
			style="padding: 300px 0px; background-image: url('https://res.cloudinary.com/grims/image/upload/v1673146871/grims_side.jpg');  background-position: center;  background-size: cover;">
			<h5 class="text-center display-4" id="caruselText">G.R.I.M.S</h5>
		</div>

		{{#each departments as |department| }}
		<a class="link text-decoration-none" href="/departments/{{id}}">
			<div class="carousel-item" data-bs-interval="4000"
				style="padding: 300px 0px; background-image: url('{{department.department_image}}');  background-position: center;  background-size: cover;">
				<h5 class="text-center display-4" id="caruselText">{{department_name}}</h5>
			</div>
		</a>
		{{/each}}
	</div>
	<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
		<span><i class="fa-solid fa-2xl fa-circle-chevron-left" id="faIcon"></i></span>
		<span class="visually-hidden">Previous</span>
	</button>
	<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
		<span><i class="fa-solid fa-2xl fa-circle-chevron-right" id="faIcon"></i></span>
		<span class="visually-hidden">Next</span>
	</button>
</div>