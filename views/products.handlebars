{{#each products as |product|}}
<div class="col mb-3 card1">
	<a class="link text-decoration-none" href="/products/{{id}}">
		<div class="card" style="background-color: rgb(236, 236, 236);">
			<div class="card-body">
				<h5 class="text-center display-6 font-weight-bold">
					<img src="{{product_image_200}}" class="img-fluid rounded float-start" alt="image of {{product_name}}">{{product_name}}</img>
				</h5>
				<p class="card-text text-center text-muted">Price: ${{price}}</p>
				<p class="card-text text-center text-muted"> Stock: {{stock}}</p>
			</div>
		</div>
	</a>
</div>
{{/each}}