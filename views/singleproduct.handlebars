<div class="col mb-3">
	<div class="card" style="background-color: rgb(236, 236, 236);">
		<div class="card-body">
			<h5 class="text-center display-6 font-weight-bold">
				<img src="{{singleProduct.product_image_400}}" class="img-fluid rounded float-start"
					alt="image of {{singleProdcut.product_name}}">{{singleProduct.product_name}}</img>
			</h5>
			<p class="card-text text-center">Price: ${{singleProduct.price}}</p>
			<p class="text-center">Stock: {{singleProduct.stock}}</p>
		</div>
	</div>
</div>
<div class="text-center">
	<button class="btn btn-danger float-center deleteProduct" type="submit">Delete Product</button>
	{{!---------------------------------------------------------------------------------------------}}
	<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#editModal">
		Edit Product
	</button>

	<!-- Modal -->
	<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModal" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<h1 class="modal-title fs-5" id="editModal">Edit Product</h1>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body">
					<div class="form-outline mb-3">
						<label class="form-label" for="">Product Name</label>
						<input type="text" id="pName" class="form-control form-control-lg" value="{{singleProduct.product_name}}" />
					</div>

					<div class="form-outline mb-3">
						<label class="form-label" for="">Product Price</label>
						<input type="text" id="pPrice" class="form-control form-control-lg" value="{{singleProduct.price}}" />
					</div>

					<div class="form-outline mb-3">
						<label class="form-label" for="">Product Stock</label>
						<input type="text" id="pStock" class="form-control form-control-lg" value="{{singleProduct.stock}}" />

					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
					<button type="button" id="editConfirm" class="btn btn-primary">Confirm</button>
				</div>
			</div>
		</div>
		</form>
		{{!--------------------------------------------------------------------------------------------}}
	</div>